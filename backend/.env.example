# Bear Movement Detection Configuration

# S3 Configuration
BEAR_S3_BUCKET=identify_bear_bucket
BEAR_S3_KEY=bears.mp4
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
# Optional: for S3-compatible endpoints (e.g., MinIO)
# AWS_S3_ENDPOINT_URL=https://your-s3-endpoint.com

# YOLO Model Configuration
YOLO_MODEL_PATH=yolov8n.pt
DETECTION_THRESHOLD=0.3

# Movement Detection Parameters
MOVEMENT_THRESHOLD_PIXELS=30.0
STATIC_OBJECT_LABELS=tree,hammock,cage
BEAR_LABELS=bear

# Processing Configuration
DOWNLOAD_INTERVAL_SEC=300
FRAME_PROCESSING_DELAY=0.1

# Database Configuration
# Option 1: MySQL (recommended for production)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/bear_data
# Option 2: SQLite (default for development)
DATABASE_URL=sqlite:///bear_movement.db

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Logging
LOG_LEVEL=INFO

# Flask App Configuration (for existing app)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000
